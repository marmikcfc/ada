{
  "name": "genux-sdk",
  "version": "0.1.0",
  "description": "Lightweight, fully-customizable web SDK for voice and chat interfaces",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "size": "size-limit"
  },
  "dependencies": {
    "@crayonai/react-ui": "^0.7.9",
    "@crayonai/stream": "^0.6.4",
    "@crayonai/react-core": "^0.7.4",
    "@daily-co/realtime-ai-daily": "^0.2.3",
    "@pipecat-ai/client-js": "^0.3.5",
    "@pipecat-ai/client-react": "^0.3.5",
    "@pipecat-ai/small-webrtc-transport": "^0.0.2",
    "@thesysai/genui-sdk": "^0.6.15",
    "jotai": "^2.12.4",
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "size-limit": "^8.2.6",
    "ts-jest": "^29.1.2",
    "tsup": "^7.2.0",
    "typescript": "~5.6.2"
  },
  "tsup": {
    "entry": ["src/index.ts"],
    "format": ["esm", "cjs"],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": true,
    "target": "es2019"
  },
  "size-limit": [
    {
      "path": "dist/esm/index.js",
      "limit": "100 kB"
    }
  ],
  "keywords": [
    "voice",
    "chat",
    "assistant",
    "ui",
    "react",
    "webrtc",
    "websocket",
    "c1component"
  ],
  "author": "Genux Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/genux-sdk"
  },
  "bugs": {
    "url": "https://github.com/username/genux-sdk/issues"
  },
  "homepage": "https://github.com/username/genux-sdk#readme"
}
